[Unit]
Description=Discord Typing Game Activity
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/opt/discord-typing-game
ExecStart=/opt/discord-typing-game/discord-typing-game
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=discord-typing-game

# Environment variables
Environment="PORT=8080"

[Install]
WantedBy=multi-user.target
